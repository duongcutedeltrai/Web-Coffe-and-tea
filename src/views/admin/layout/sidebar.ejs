<script>
    document.addEventListener("DOMContentLoaded", () => {
        const currentPath = window.location.pathname; // Ví dụ: /admin/categories/update/1
        const menuLinks = document.querySelectorAll(".menu-item");

        menuLinks.forEach(link => {
            const linkPath = link.getAttribute("href"); // Ví dụ: /admin/categories

            // Nếu URL hiện tại bắt đầu bằng linkPath (dù có /update/... phía sau)
            if (currentPath.startsWith(linkPath)) {
                menuLinks.forEach(l => l.classList.remove("active")); // Xóa active cũ
                link.classList.add("active"); // Thêm active vào link đúng
            }
        });

    });
</script>