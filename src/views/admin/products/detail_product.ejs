                  <div class="review-images">
                    <div class="review-image"></div>
                    <div class="review-image"></div>
                    <div class="review-image"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </main>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/admin/js/products/product_update.js"></script>
  <script src="/admin/js/products/product_detail.js"></script>
  <script type="module"></script>
</body>

</html>