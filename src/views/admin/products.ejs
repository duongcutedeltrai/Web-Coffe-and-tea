<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restaurant Menu</title>
    <!-- Embedded CSS to avoid MIME type issues -->
    <link rel="stylesheet" href="/admin/css/products.css" />
    <link rel="stylesheet" href="/admin/css/style.css" />

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  </head>
  <body>
    <div class="container">
      <%- include('../layout/sidebar.ejs'); -%> <%-
      include('../layout/header.ejs'); -%>
      <div class="content">
        <div class="top">
          <div class="top-content">
            <h1>Menu</h1>
            <p class="date">Thursday, 2 Feb 2021</p>
          </div>
          <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input
              type="text"
              placeholder="Search for food, coffee, etc..."
              class="search-input"
            />
          </div>
        </div>

        <!-- Category Navigation -->
        <div class="category-nav-container">
          <nav class="explore__menu--list">
            <div class="category-item" data-category="salad">
              <div class="category-image">
                <img src="/images/products/Phê nâu.jpg" alt="Salad" />
              </div>
              <span class="menu__item--name">Salad</span>
            </div>
            <div class="category-item" data-category="rolls">
              <div class="category-image">
                <img src="/images/products/Phê nâu.jpg" alt="Rolls" />
              </div>
              <span>Rolls</span>
            </div>
            <div class="category-item" data-category="rolls">
              <div class="category-image">
                <img src="/images/products/Phê nâu.jpg" alt="Rolls" />
              </div>
              <span>Rolls</span>
            </div>
            <div class="category-item" data-category="rolls">
              <div class="category-image">
                <img src="/images/products/Phê nâu.jpg" alt="Rolls" />
              </div>
              <span>Rolls</span>
            </div>
            <div class="category-item" data-category="deserts">
              <div class="category-image">
                <img src="/images/products/Phê nâu.jpg" alt="Deserts" />
              </div>
              <span>Deserts</span>
            </div>
            <div class="category-item" data-category="sandwich">
              <div class="category-image">
                <img src="/images/products/Phê nâu.jpg" alt="Sandwich" />
              </div>
              <span>Sandwich</span>
            </div>
            <div class="category-item" data-category="cake">
              <div class="category-image">
                <img src="/images/products/Phê nâu.jpg" alt="Cake" />
              </div>
              <span>Cake</span>
            </div>
            <div class="category-item" data-category="pure-veg">
              <div class="category-image">
                <img src="/images/products/Phê nâu.jpg" alt="Pure Veg" />
              </div>
              <span>Pure Veg</span>
            </div>
            <div class="category-item" data-category="pasta">
              <div class="category-image">
                <img src="/images/products/Phê nâu.jpg" alt="Pasta" />
              </div>
              <span>Pasta</span>
            </div>
            <div class="category-item" data-category="noodles">
              <div class="category-image">
                <img src="/images/products/Phê nâu.jpg" alt="Noodles" />
              </div>
              <span>Noodles</span>
            </div>
            <!-- Added scroll arrows -->
          </nav>

          <button class="scroll-arrow left" id="scrollLeft">
            <i class="fas fa-chevron-left"></i>
          </button>
          <button class="scroll-arrow right" id="scrollRight">
            <i class="fas fa-chevron-right"></i>
          </button>
        </div>

        <!-- Main Content -->
        <main class="main-content">
          <div class="menu-header">
            <div class="menu-title">
              <h2>Menu</h2>
              <p class="date">Thursday, 2 Feb 2021</p>
            </div>
            <div class="menu-controls">
              <div class="filter-btn">
                <i class="fas fa-filter"></i>
              </div>
              <select class="order-status">
                <option>Order Status</option>
                <option>Pending</option>
                <option>Completed</option>
                <option>Cancelled</option>
              </select>
              <button class="reset-filter">
                <i class="fas fa-redo"></i>
                Reset Filter
              </button>
            </div>
          </div>

          <!-- Menu Grid -->
          <div class="menu-grid">
            <!-- Add New Dish Card -->
            <div class="menu-card add-new-card">
              <div class="add-icon">
                <i class="fas fa-plus"></i>
              </div>
              <p>Add new dish</p>
            </div>

            <!-- Menu Items -->
            <!-- Menu items will be dynamically generated by JavaScript -->
          </div>

          <!-- Pagination -->
          <div class="pagination">
            <span class="page-info">Showing 09 from 100 product in menu</span>
            <div class="page-numbers">
              <button class="page-btn">1</button>
              <button class="page-btn active">2</button>
              <button class="page-btn">3</button>
              <button class="page-btn">4</button>
              <button class="page-btn">5</button>
              <span class="dots">...</span>
            </div>
          </div>
        </main>
      </div>
      <!-- Header -->
    </div>

    <!-- Embedded JavaScript to avoid 404 errors -->
    <script src="/admin/js/products.js"></script>
  </body>
</html>
