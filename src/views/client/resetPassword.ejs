<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password - Crextio</title>
    <link rel="stylesheet" href="/client/css/signIn_signUp.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="auth-container">
      <!-- Form Section -->
      <div class="form-section" id="formSection">
        <div class="form-content">
          <div class="brand">
            <h1>Crextio</h1>
          </div>

          <!-- Reset Password Form -->
          <div class="form-wrapper" id="resetPasswordForm">
            <h2>Reset your password</h2>
            <p class="subtitle">Enter your new password details</p>

            <form class="auth-form" action="/auth/reset-password" method="POST">
              <input type="hidden" name="token" value="<%= token %>" />
              <!--Cần có token để validate  -->
              <div class="input-group">
                <input
                  type="email"
                  placeholder="Email"
                  name="email"
                  value="<%= user.email %>"
                  readonly
                />
              </div>
              <div class="input-group">
                <input
                  type="password"
                  placeholder="New Password"
                  name="newPassword"
                  required
                />
                <button type="button" class="password-toggle">
                  <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"
                    ></path>
                    <circle cx="12" cy="12" r="3"></circle>
                  </svg>
                </button>
              </div>
              <div class="input-group">
                <input
                  type="password"
                  placeholder="Confirm New Password"
                  required
                />
                <button type="button" class="password-toggle">
                  <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"
                    ></path>
                    <circle cx="12" cy="12" r="3"></circle>
                  </svg>
                </button>
              </div>
              <button type="submit" class="submit-btn">Update Password</button>
            </form>

            <p class="switch-text">
              Remember your password?
              <a href="/auth/login" class="switch-btn"> Back to Sign in </a>
            </p>
          </div>
        </div>
      </div>

      <!-- Image Section -->
      <div class="image-section" id="imageSection">
        <img
          src="https://scontent-hkg1-2.xx.fbcdn.net/v/t39.30808-6/484831242_1057200206430372_431870730670613622_n.jpg?_nc_cat=103&ccb=1-7&_nc_sid=127cfc&_nc_ohc=mIQHCt5ERCEQ7kNvwFR0Gyl&_nc_oc=AdnxefWlksEnF0qblYf1HJ9lkg5Or7a0UjFQ6MW8le8GnRn_d1jgDOjmjr0dN1yxg5yNRsNm-xSHs8fGRopEpEMk&_nc_zt=23&_nc_ht=scontent-hkg1-2.xx&_nc_gid=TdH3iDlTxRtWhFFHcAH-jg&oh=00_Afb82DBShDeNbOHHyrTWDEgMOJXy-DfdWHnXvBMK4-mmuA&oe=68CCAA99"
          alt="Background"
          class="background-image"
        />
      </div>
    </div>
  </body>
</html>
