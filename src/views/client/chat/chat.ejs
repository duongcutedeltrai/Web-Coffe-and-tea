<!DOCTYPE html>
<html lang="vi">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Chat - Phê La</title>

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />

        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"
        />
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="/client/css/style.css" />
        <link rel="stylesheet" href="/client/css/chat/chat.css" />
    </head>
    <body>
        <%- include('../layout/navbar_login.ejs'); -%>
        <div
            class="container-fluid vh-100 p-0"
            style="position: relative; z-index: 100000000"
        >
            <div class="row g-0 h-100">
                <div class="col-md-3 sidebar-left">
                    <div
                        class="sidebar-header d-flex align-items-center justify-content-between px-4 py-3"
                    >
                        <div class="d-flex align-items-center gap-3">
                            <div class="app-icon">
                                <i class="bi bi-chat-dots-fill"></i>
                            </div>
                            <h5
                                class="mb-0"
                                style="font-size: 24px; font-weight: 600"
                            >
                                Liên Hệ
                            </h5>
                        </div>
                        <button class="btn btn-link text-dark p-0">
                            <i class="bi bi-three-dots-vertical fs-5"></i>
                        </button>
                    </div>

                    <div class="px-4 pb-3">
                        <div class="search-box">
                            <i class="bi bi-search"></i>
                            <input
                                type="text"
                                class="form-control"
                                placeholder="Search User..."
                                id="searchInput"
                            />
                        </div>
                    </div>

                    <div class="contact-list"></div>
                </div>

                <div class="col-md-8 chat-area">
                    <div
                        class="chat-header d-flex align-items-center justify-content-between px-4 py-3"
                    >
                        <div class="d-flex align-items-center gap-3">
                            <img
                                src=""
                                alt="John Johnson"
                                class="chat-header-avatar"
                            />
                            <div>
                                <h6
                                    class="mb-0 fw-bold"
                                    id="currentChatUser"
                                ></h6>
                                <span class="status-indicator online">
                                    <i class="bi bi-circle-fill"></i>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div
                        class="messages-container"
                        id="messagesContainer"
                    ></div>

                    <div class="message-input-container p-3">
                        <div class="message-input-wrapper">
                            <button
                                class="btn btn-link text-muted p-0 me-2"
                                id="attachBtn"
                            >
                                <i class="bi bi-paperclip fs-5"></i>
                            </button>
                            <input
                                type="text"
                                class="form-control"
                                placeholder="Send a message"
                                id="messageInput"
                            />

                            <button
                                class="btn btn-primary btn-send"
                                id="sendBtn"
                            >
                                <i class="bi bi-send-fill"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <script src="/client/js/chat/chat.js"></script>
    </body>
</html>
